{
  "name": "masseybuild",
  "displayName": "MasseyBuild",
  "description": "Massey Plugin",
  "publisher": "MasseyCS",
  "repository": "https://github.com/dzo/masseybuild",
  "homepage": "https://github.com/dzo/masseybuild#readme",
  "icon": "assets/icons/massey.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "keywords": [
    "Massey"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:c",
    "onLanguage:makefile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "masseybuild.build",
        "title": "Build"
      },
      {
        "command": "masseybuild.run",
        "title": "Run"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "masseybuild",
          "title": "Massey Build",
          "icon": "assets/icons/massey_logo.svg"
        }
      ]
    },
    "views": {
      "masseybuild": [
        {
          "id": "masseybuild",
          "name": "Massey Build"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "masseybuild",
        "contents": "[Build](command:masseybuild.build)\n[Build and Run](command:masseybuild.run)"
      }
    ],
    "configuration": {
      "title": "Massey Build Configuration",
      "properties": {
        "masseybuild.compiler": {
          "type": "string",
          "default": "g++",
          "description": "C++ compiler path",
          "scope": "resource"
        },
        "masseybuild.ext": {
          "type": "string",
          "default": "",
          "description": "Output Extension",
          "scope": "resource"
        },
        "masseybuild.cflags": {
          "type": "string",
          "default": "",
          "description": "Compiler Flags",
          "scope": "resource"
        },
        "masseybuild.ldlibs": {
          "type": "string",
          "default": "",
          "description": "Libraries",
          "scope": "resource"
        },
        "masseybuild.args": {
          "type": "string",
          "default": "",
          "description": "Arguments",
          "scope": "resource"
        },
        "masseybuild.make": {
          "type": "string",
          "default": "make",
          "description": "Make Command",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  }
}
